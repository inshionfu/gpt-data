<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kojikoji.gpt.data.infrastructure.dao.IProductDao">

    <resultMap id="productMap" type="com.kojikoji.gpt.data.infrastructure.po.ProductPO">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_desc" property="productDesc"/>
        <result column="quota" property="quota"/>
        <result column="price" property="price"/>
        <result column="sort" property="sort"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryProduct" parameterType="java.lang.Integer" resultMap="productMap">
        select id, product_id, product_name, product_desc, quota, price, sort, is_enabled, create_time, update_time
        from product
        where product_id = #{productId}
    </select>

    <select id="queryProducts" resultMap="productMap">
        select id, product_id, product_name, product_desc, quota, price, create_time, update_time
        from product
        where
            is_enabled = 1
        order by
            sort
    </select>

</mapper>
